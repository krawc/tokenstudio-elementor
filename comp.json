{
    "comp": {
        "input": {
            "border": {
                "$value": "{system.borderInput}",
                "$type": "color"
            },
            "padding": {
                "$value": "{reference.space200}",
                "$type": "spacing"
            },
            "placeholder": {
                "$value": "{system.placeholder}",
                "$type": "color"
            },
            "borderRadius": {
                "$value": "{reference.radius100}",
                "$type": "borderRadius"
            }
        },
        "avatar": {
            "borderRadius": {
                "$value": "{reference.radius900}",
                "$type": "borderRadius"
            }
        },
        "button": {
            "primary": {
                "hover": {
                    "textColor": {
                        "$value": "{reference.white}",
                        "$type": "color"
                    },
                    "background": {
                        "$value": "{system.surface.primary.hover}",
                        "$type": "color"
                    }
                },
                "active": {
                    "textColor": {
                        "$value": "{reference.white}",
                        "$type": "color"
                    },
                    "background": {
                        "$value": "{system.surface.primary.active}",
                        "$type": "color"
                    }
                },
                "default": {
                    "padding": {
                        "$value": "{reference.space300} {reference.space500}",
                        "$type": "spacing"
                    },
                    "iconArrow": {
                        "$value": "{reference.icon400}",
                        "$type": "sizing"
                    },
                    "textColor": {
                        "$value": "{reference.white}",
                        "$type": "color"
                    },
                    "background": {
                        "$value": "{system.surface.primary.default}",
                        "$type": "color"
                    },
                    "lineHeight": {
                        "$value": "{reference.fontLine300}",
                        "$type": "lineHeight"
                    },
                    "borderRadius": {
                        "$value": "{reference.radius100}",
                        "$type": "borderRadius"
                    }
                }
            },
            "secondary": {
                "hover": {
                    "border": {
                        "$value": "1px solid {system.surface.secondary.text}",
                        "$type": "border"
                    },
                    "textColor": {
                        "$value": "{system.surface.secondary.hover}",
                        "$type": "color"
                    }
                },
                "default": {
                    "border": {
                        "$value": "1px solid {system.surface.secondary.text}",
                        "$type": "border"
                    },
                    "padding": {
                        "$value": "{reference.space300} {reference.space500}",
                        "$type": "spacing"
                    },
                    "textColor": {
                        "$value": "{system.surface.secondary.text}",
                        "$type": "color"
                    },
                    "background": {
                        "$value": "transparent",
                        "$type": "color"
                    },
                    "borderRadius": {
                        "$value": "{reference.radius100}",
                        "$type": "borderRadius"
                    }
                }
            }
        }
    }
}